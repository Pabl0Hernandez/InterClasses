@{
	ViewData["Title"] = "Página Inicial";
}

<div class="container py-5">

	<div class="text-center mb-5">
		<h1 class="display-4 fw-bold">
			<i class="bi bi-trophy fs-0 text-warning"></i> Bem Vindo ao Interclasse 2025
		</h1>
		<p class="lead fw-bold text-black"></p>
		<a asp-controller="Privacy" asp-action="Index" class="btn btn-outline-success btn-lg mt-3">Plataforma</a>
	</div>

	<div class="row text-center">

		<div class="col-12 col-md-4 mb-4">
			<div class="card shadow-sm h-100">
				<div class="card-body">
					<i class="bi bi-emoji-heart-eyes display-3 text-danger mb-3"></i>
					<h5 class="card-title fw-bold text-black">Basquete</h5>
					<p class="card-text fw-bold text-black">
						Basquete é a arte de se movimentar em equipe para transformar a bola em pontos, com agilidade, estratégia e precisão.
						<img src="~/img/pepi.png" alt="Basquete" class="img-fluid roudend mt-3 shadow" />

					</p>
				</div>
			</div>
		</div>

		<div class="col-12 col-md-4 mb-4">
			<div class="card shadow-sm h-100">
				<div class="card-body">
					<i class="bi bi-emoji-frown display-3 text-black mb-3"></i>
					<h5 class="card-title fw-bold text-black">Vôlei</h5>
					<p class="card-text fw-bold text-black">
						Vôlei é a dança de equipes que, com leveza e estratégia, buscam transformar a bola em pontos, alternando força e finesse no jogo aéreo.
						<img src="~/img/pepi2.jpg" alt="Volei" class="img-fluid roudend mt-3 shadow"/>
					</p>

				</div>
			</div>
		</div>

		<div class="col-12 col-md-4 mb-4">
			<div class="card shadow-sm h-100">
				<div class="card-body">
					<i class="bi bi-emoji-sunglasses display-3 text-info mb-3"></i>
					<h5 class="card-title fw-bold text-black">Futebol</h5>
					<p class="card-text fw-bold text-black">
						Esporte coletivo jogado entre dois times de 11 jogadores, com o objetivo de marcar gols na baliza adversária.
					</p>
					<img src="~/img/pepi3.jpg" alt="Futebol" class="img-fluid rounded mt-3 shadow">
				</div>
			</div>
		</div>

		<style>
			body {
				background-color: #ffffff;
				color: #000000;
			}


		</style>

	</div>
</div>
